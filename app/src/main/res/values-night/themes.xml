<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ParwinderDeep_ScoreKeeper" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray_500</item>
        <item name="colorPrimaryVariant">@color/gray_700</item>
        <item name="colorOnPrimary">@color/gray_700</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_700</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:textViewStyle">@style/myTextViewStyle</item>
        <item name="buttonStyle">@style/myButtonStyle</item>
        <item name="android:buttonStyle">@style/myButtonStyle</item>
    </style>

    <style name="background">

        <item name="android:windowBackground">@color/gray_700</item>

    </style>

    <style name="myTextViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>


    <style name="myButtonStyle" parent="Base.Widget.AppCompat.Button">
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">24sp</item>
        <item name="background">@color/gray_500</item>
    </style>

    <style name="MyRadioButton" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/teal_200</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>

    <style name="myTextViewStyle.myLabel">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">.4</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_500</item>
        <item name="android:textSize">24sp</item>
    </style>

</resources>